Arrays


1.
a= Array.new(2,"hi")
print(a)

2.
a=Array.new(3)
a[0]=Array.new(2)
a[0][1]="hii"
a[0][0]="he"
a[1]=["1",2]
a[2]=[2,3]
for i in a
    for j in i
         print("#{j} ")
    end 
end


3.
str=gets.chomp
a=str.split(",")
for i in a
     puts(i)
end

4.
str=gets.chomp
a=str.split(",")
for i in a
     b=i.split("")
     print(b[0..b.length-2])
end